{% extends 'base.html.twig' %}

{% block title %}Liste des burgers{% endblock %}

{% block content %}
    <h1>Nos {{ title }}s</h1>

    {% if entity is empty %}
        <p>Aucun {{ title }} disponible pour le moment.</p>
    {% else %}
        <ul>
            {% for obj in entity %}
                <li style="padding-bottom: 20px;">
                    <strong>{{ obj.name }}</strong><br>

                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
